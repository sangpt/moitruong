<style type="text/css">
	article img{
		width: 100% !important;
		height: auto !important;
	}
</style>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-sm-12">
          <%#= render "form", post: @post %>
          <%= link_to "Create Post", new_post_path, class: "btn btn-primary block full-width m-b" if admin_signed_in? %>
        </div>
      </div>
      <hr/>
      <% if @posts.any? %>
        <%= render @posts %>
      <% else %>
        <h2>No recent posts!</h2>
      <% end %>
    </div>
  </div>
</div>
