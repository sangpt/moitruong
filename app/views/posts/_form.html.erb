<%= form_for post do |f| %>
  <div class="form-group">
    <%= f.label :title, t(".title") %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :content, t(".content") %>
    <%= f.cktext_area :content, required: true %>
  </div>

  <div class="actions">
    <%= f.submit t(".post"), class: "btn btn-primary block full-width m-b" %>
  </div>
<% end %>
