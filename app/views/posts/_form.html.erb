<%= form_for post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.cktext_area :content %>
  </div>

  <div class="actions">
    <%= f.submit "Post", class: "btn btn-primary block full-width m-b" %>
  </div>
<% end %>
